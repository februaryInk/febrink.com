!!!
%html{ :lang => 'en' }
    %head
        %title
            = content_for?( :title ) ? yield_content( :title ) : 'febrink.com'
        %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1' }
        %link{ :href => 'http://fonts.googleapis.com/css?family=Marck+Script|Berkshire+Swash', :rel => 'stylesheet' }
        %link{ :rel => 'stylesheet', :href => 'assets/application.scss' }
        %script{ :src => 'http://code.jquery.com/jquery-2.1.0.min.js', :type => 'text/javascript' }
        %script{ :src => 'assets/application.js', :type => 'text/javascript' }
    %body
        = yield_content( :header ) if content_for?( :header )
        = yield_content( :body ) if content_for?( :body )
        = yield_content( :footer ) if content_for?( :footer )
